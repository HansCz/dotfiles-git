[alias]
  co = checkout
  ci = commit
  # Log display from screencast, with train tracks.
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  # Alternate log display from Scott Chacon
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  staged = diff --cached
  unstaged = diff
  g = grep --break --heading --line-number --color=always

[apply]
  whitespace = nowarn
[core]
  editor = vim
  excludesfile = $HOME/.gitignore
  quotepath = off
[color]
  branch = auto
  diff = auto
  status = auto
  pager = true
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
  [branch]
    autosetupmerge = true

[gui]
  fontdiff = -family Monaco -size 12 -weight normal -slant roman -underline 0 -overstrike 0
[i18n]
  logoutputencoding = utf8
  commitencoding = utf8
